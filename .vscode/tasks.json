{
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-I../include/",
				"-g",
				"${file}",
				"../src/glad.c",
				"-lglfw",
				"-lX11",
				"-lpthread",
				"-lXrandr",
				"-lXi",
				"-ldl",
				"-lGL",
				"-lGLU",
				"-lglut",
				"-lm",
				"-lstdc++",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task generated by Debugger."
		}
	],
	"version": "2.0.0"
}
